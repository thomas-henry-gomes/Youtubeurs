<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Settings theme -->
    <style name="SettingsTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_blue_500</item>
        <item name="android:textColorPrimary">@color/material_textColorPrimary</item>
        <item name="android:textColor">@color/material_textColorPrimary</item>
    </style>

    <!-- Custom theme. -->
    <style name="MyCustomTheme" parent="Theme.AppCompat">
		<!--<item name="android:textStyle">italic</item>
		<item name="android:typeface">sans</item>
		<item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/background</item>-->

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_grey_800</item>
        <item name="android:textColorPrimary">@color/material_textColorPrimary</item>
        <item name="android:windowBackground">@color/background</item>

        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
	</style>
	<!-- Button Custom theme. -->
    <style name="MyButtonCustomTheme" parent="Theme.AppCompat">
		<item name="android:textStyle">italic</item>
		<item name="android:typeface">sans</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
    <!--  -->
    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <item name="ptrHeaderHeight">@dimen/ptrHeaderHeight</item>
        <item name="ptrHeaderBackground">@color/material_blue_500</item>
        <item name="ptrProgressBarColor">@color/material_blue_500</item>
        <item name="ptrPullText">Tirez vers le bas pour rafra√Æchir ...</item>
        <item name="ptrRefreshingText">Actualisation en cours ...</item>
        <item name="ptrSmoothProgressBarStyle">@style/Widget.Custom.SmoothProgressBar.GNowProgressBar</item>
    </style>

    <style name="Widget.Custom.SmoothProgressBar.GNowProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">3</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">false</item>
        <item name="spb_reversed">false</item>
        <item name="spb_colors">@array/gplus_colors</item>
    </style>
</resources>
